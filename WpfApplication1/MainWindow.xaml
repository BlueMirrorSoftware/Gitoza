<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Ellipse Grid.Column="0" Grid.Row="0" Fill="Black" Stretch="Uniform" Width="100" Height="100"/>
        <Ellipse Grid.Column="1" Grid.Row="0" Fill="Black" Stretch="Uniform" Width="70" Height="70"/>
        <Ellipse Grid.Column="0" Grid.Row="1" Fill="Black" Stretch="Uniform" Width="150" Height="150"/>
        <Ellipse Grid.Column="1" Grid.Row="1" Fill="Black" Stretch="Uniform" Width="150" Height="150"/>
    </Grid>
</Window>
